<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.djung.locally.View.VendorActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap Photo to Change"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ubc"
            android:id="@+id/image_view_edit_vendor_image"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Description"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/edit_text_vendor_description_label"
            android:layout_margin="8dp"
            android:labelFor="@+id/edit_text_vendor_description"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_vendor_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/test_vendor_description"
            android:maxLines="10"/>

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_text_height"
            android:paddingLeft="@dimen/activity_text_padding"
            android:paddingRight="@dimen/activity_text_padding"
            android:id="@+id/edit_text_edit_email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLength="128"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/field_text_small"
            android:text=" "
            android:textColor="@color/alert"
            android:id="@+id/text_view_edit_email_message"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_text_height"
            android:paddingLeft="@dimen/activity_text_padding"
            android:paddingRight="@dimen/activity_text_padding"
            android:id="@+id/edit_text_edit_phone"
            android:hint="Phone number"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="14"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_save_vendor_details"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_save"
        />
</FrameLayout>