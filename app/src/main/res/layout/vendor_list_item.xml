<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp"
    android:id="@+id/vendor_list_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendor_list_item_banner">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:lines="1"
            android:text="Vendor Name"
            android:id="@+id/vendor_list_item_name"
            android:textSize="20dp"
            android:textColor="#000"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:gravity="end"
            android:text="Vendor Distance"
            android:textColor="#000"
            android:id="@+id/vendor_list_item_distance"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_alignParentBottom="true"
        android:id="@+id/vendor_list_item_location"
        android:textColor="#000"
        android:text="Vendor Location"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vendor_list_item_status"
        android:layout_below="@id/vendor_list_item_banner"
        android:layout_above="@id/vendor_list_item_location"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:text="Open Now!"
        android:textSize="15dp"/>
</RelativeLayout>